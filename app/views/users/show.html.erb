<h1>User</h1>
<%= @user.username%>

<div>
  <h4>Upcoming events </h4>
  <% @user.attended_events.where("date >= ?", DateTime.now).each do |e|%>
    <%= link_to e.name, event_path(e) %><br>
    <%= e.date %><br>
    <%= e.description %><br>
    <div class="invite-btn"><%= link_to "Invite a friend", new_event_manager_path %></div><br>
  <% end %>
</div>

<div>
  <h4>Previous events </h4>
  <% @user.attended_events.where("date <= ?", DateTime.now).each do |e|%>
    <%= link_to e.name, event_path(e) %><br>
    <%= e.date %><br>
    <%= e.description %><br><br>
  <% end %>
</div>

<%= link_to "Back <<", root_path %>

