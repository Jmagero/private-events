    <% if current_user %>
      <div class="nav-bar d-flex">
        <p>Logged in as <%= current_user.username %></p>
        <%= link_to "Log Out", session_path(current_user), method: :delete %>
      </div>  
    <% else %>
      <div class="nav-bar d-flex">
        <%= link_to "Sign up", new_user_path %> or
        <%= link_to "Log In", new_session_path %>
      </div>
    <% end %>