<h1><%= @event.name %></h1>
<p>Event created by <%= link_to @event.creator.username, user_path(@event.creator) %></p>
<h2>Invited Guests</h2>
    <% if @attendants.size == 0 %>
        <p><em>No guests have been invited to this event so far.</em></p>
    <% else %>
        <% @attendants.each do |e| %>
        <%= link_to e.username, user_path(e) %><br>
    <% end %>
<% end %>

<br><br>
<%= link_to "Invite", new_event_manager_path  %>

<div>
    <br><br>
    <%= link_to "Back << ", root_path %>
</div>
